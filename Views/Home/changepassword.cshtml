@model Users
@Html.Partial("NavMenu")
<form method="post" class="w-75 mx-auto">

    <input type="hidden" name="Id" value="@Model.UserId" />

    <!-- Password Input -->
    <div class="mb-3">
        <label for="password" class="form-label">New Password</label>
        <div class="input-group">
            <input type="password" class="form-control" asp-for="Password" id="password" placeholder="Enter New Password">
            @*  <button type="button" class="btn btn-outline-secondary" id="toggle1" onclick="show1()">
            <i id="icon" class="fa-solid fa-eye"></i>
            </button> *@
        </div>
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label for="cPassword" class="form-label">Confirm Password</label>
        <div class="input-group">
            <input type="password" class="form-control" asp-for="ConfirmPassword" id="cPassword" placeholder="Re-Enter New Password">
            @* <button type="button" class="btn btn-outline-secondary" id="toggle2" onclick="show2()">
            <i id="icon2" class="fa-solid fa-eye"></i>
            </button> *@
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" id="btn-signup" class="btn btn-outline-success" route-id="@Model.UserId">Change Password</button>
    </div>

</form>
@Html.Partial("Footer")