@model IEnumerable<Institute_FineArt1.Models.Painting>
@Html.Partial("NavMenu")
<div id="smooth-wrapper">
    <div id="smooth-content">
        <!--==============================
        Breadcumb
        ============================== -->
        <div class="breadcumb-wrapper text-center" data-bg-src="~/img/bg/breadcrumb-bg.png">
            <!-- bg animated image/ -->
            <div class="container">
                <div class="breadcumb-content">
                    <h1 class="breadcumb-title">Paintings</h1>
                </div>

            </div>
        </div>

@{
    ViewData["Title"] = "My Paintings";
}
        <div class="container-sm p-3 my-2 shadow-sm d-flex justify-content-start align-items-center flex-column">

           <h2 class="text-center mb-4 fw-bold">My Paintings</h2>
            <a asp-controller="Home" asp-action="StudentUploads" class="btn btn-primary mb-4 px-4 py-2 shadow">Upload New Painting</a>


            <div class="row g-4">
                @foreach (var art in Model)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 d-flex align-items-stretch">
                        <div class="card shadow border-0">
                            <!-- Card Image -->
                            <div class="card-img-top position-relative">
                                <img src="~/StudentPainting/@art.ArtImage" alt="Painting"
                                     class="img-fluid rounded-top">
                                <div class="position-absolute top-0 start-0 p-2 bg-dark text-white opacity-75 rounded-bottom">
                                    <span class="fw-bold">@art.ArtTitle</span>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body d-flex flex-column text-center">
                                <p class="text-muted flex-grow-1">@art.ArtDetail</p>
                                <div class="d-flex justify-content-center gap-3">
                                    <a asp-controller="Home" asp-action="ModifyArt" asp-route-id="@art.ArtId" class="btn btn-warning btn-sm shadow-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-controller="Home" asp-action="Delete" asp-route-id="@art.ArtId" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm shadow-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>



        </div>


 @Html.Partial("footer") 
</div>
</div>
<!-- Scroll To Top -->
<div class="scroll-top">
    <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
        <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" style="transition: stroke-dashoffset 10ms linear 0s; stroke-dasharray: 307.919, 307.919; stroke-dashoffset: 307.919;"></path>
    </svg>
</div>